<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <div style="width:30%; margin:25px auto ">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="descrition" name="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="cost" step="99" min="0" required>
                  </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">go back</a>
        </div>
        
    </div>
</div>
<%- include("../partials//footer") %>